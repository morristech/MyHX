<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.example.viewpagerdemo.ui.activity.CommentsActivity">

    <include layout="@layout/jl_base_title_layout" />

    <RatingBar
        android:id="@+id/comments_rb"
        android:stepSize="1"
        android:rating="1"
        android:numStars="5"
        android:isIndicator="true"
        android:layout_gravity="center_horizontal"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="left|top"
        android:layout_width="match_parent"
        android:background="@drawable/shape_grenn_corners"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/comments_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:minLines="5"
        android:maxLines="15"
        android:background="@null"
        android:text="111"
        />
    </LinearLayout>


    <TextView
        android:id="@+id/commonet_bt"
        android:text="提交"
        android:background="@drawable/shape_bt_grenn_corners"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="40dp" />

</LinearLayout>

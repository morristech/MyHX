<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.viewpagerdemo.ui.activity.PlayMainActivity">

    <include
        android:id="@+id/top"
        layout="@layout/jl_base_title_layout" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wo_icon06" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="应付金额" />

        <TextView
            android:id="@+id/fk_money"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|right"
            tools:text="11.02"
            android:text="" />


    </LinearLayout>

    <Button
        android:id="@+id/fk_sit"
        android:layout_below="@+id/ll"
        android:layout_width="match_parent"
        android:background="@drawable/shape_grenn_corners_pull"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_height="40dp"
        android:text="确认付款"
        />


</RelativeLayout>

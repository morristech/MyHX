<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lunb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.viewpagerdemo.ui.views.banner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_below="@+id/lunb"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="1"
            android:layout_marginRight="65dp"
            android:ellipsize="end"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_scroe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/main_text"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:visibility="gone"
                android:textColor="@color/main_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/main_text"
                android:text=""
                android:visibility="gone"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人吃过"
                android:visibility="gone"
                android:textColor="@color/main_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/main_text"
                android:text="11"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/logding_bg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/list_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textColor="@color/logding_bg"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/lunb"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/shop_layout"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.viewpagerdemo.ui.jlfragmenwork.util.CircleImageView
            android:id="@+id/list_image"
            android:layout_gravity="right"
            android:src="@drawable/pic"
            android:layout_width="45dp"
            android:layout_marginTop="5dp"
            android:layout_height="45dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/tanchu"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_name"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/logding_bg"
            android:textSize="14sp" />
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>